<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" prefHeight="384.0" prefWidth="299.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">

    <top>
        <Label text="Hitori Game" BorderPane.alignment="TOP_CENTER" />

    </top>

    <bottom>
        <VBox alignment="CENTER" spacing="20">
            <HBox alignment="CENTER">
                <Button prefWidth="80" text="Check" />
            </HBox>
            <HBox fx:id="bottomBox" alignment="CENTER" spacing="10">
                <ComboBox fx:id="box" promptText="Mode">
                    <items>
                        <FXCollections fx:factory="observableArrayList">

                            <String fx:value="5" />
                            <String fx:value="6" />
                            <String fx:value="7" />
                        </FXCollections>
                    </items>
                </ComboBox>
                <Button onAction="#handleRestartButton" prefWidth="90" text="Restart" />
                <Button onAction="#handle" prefWidth="90" text="Rules" />
                <Button fx:id="startButton" onAction="#handleStartButton" prefWidth="90" text="Start" />
                <Button fx:id="loadButton" onAction="#handleLoadButton" prefWidth="90" text="Load" />
            </HBox>
        </VBox>
    </bottom>
    <left>

    </left>
   <center>
       <VBox alignment="BOTTOM_CENTER">
        <GridPane fx:id="gameMatrix" alignment="BOTTOM_CENTER" prefHeight="500" prefWidth="500"/>
       </VBox>
   </center>
    <right>

    </right>
</BorderPane>
